<idea-plugin>
    <id>com.ahmedmourad.buggy</id>
    <name>Buggy</name>
    <vendor>Ahmed Mourad</vendor>

    <description><![CDATA[
    An IDEA plugin made specifically to showcase a bug with Kotlin's inspection suppressors
    ]]></description>

    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <lang.inspectionSuppressor
                language="kotlin"
                implementationClass="com.ahmedmourad.buggy.idea.BuggyInspectionSuppressor"
        />
    </extensions>

</idea-plugin>
